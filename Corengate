//Variabelen
int vx = 10;
int x = 489;

// De setup van het scherm 
void setup () {
  size (1024, 720);
  background(0);
}

void draw () {

  //Hier staan de banen waar de Character over heen gaat lopen
  fill (0, 255, 255);
  rect (264, 0, 150, height);
  rect (414, 0, 150, height);
  rect (564, 0, 150, height);

  //  beweging van de Character
  if (key== CODED) {
    if (keyCode == RIGHT) {
      x += vx;
    }
  }
  if (key == CODED) {
    if (keyCode == LEFT) {
      x -= vx;
    }
  }

  // De Charachter
  fill (255, 0, 0);
  ellipse (x, 620, 90, 90);
}
