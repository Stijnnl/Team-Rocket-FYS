boolean alive = true;
int m = millis() /100;

Lanes theLns = new Lanes ();
Char theChr = new Char();
Enemy theNmy = new Enemy();


void setup() {
  size(1024, 720);
   d = loadImage("lanes.png");
  // The background image must be the same size as the parameters
  // into the size() method. In this program, the size of the image
  // is 1024 x 720 pixels.
      theChr.init();
      theNmy.init();
      smooth();
      rectMode(CENTER);
      noStroke();
      
      
  if (key == CODED) {
    if (keyCode == ESC) {
      //exit the game
      exit();
    }
  }
}



void keyPressed() {
 theChr.keyPressed(); 
}


void draw() {
  
    theLns.draw();
    theNmy.draw();
    theChr.draw();
    
    fill(0,0,255);
    textSize(20);
    text("Press 'ESC' to exit", 800, 680);
}
