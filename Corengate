class Char {

  //variabelen
  int x, y; // positie
  int vx; // snelheid
  int radius; //diameter
  int clr; // kleur

  void init () {
    //void init  initialiseert de variabelen

    //waar bevind de character zich
    x = width/2;
    y = 620; 
    //hoe groot is de character
    radius = 90;
    //wat is de snelheid van de character
    vx = 10;
    //welke kleur krjgt de character
    clr = color (255, 0, 0);
  }


  void update () {
    //void update : updated de character

    if (key== CODED) {
      if (keyCode == RIGHT) {
        x = x+150;
      }
    }
    if (key == CODED) {
      if (keyCode == LEFT) {
        x -= vx;
      }
    }
  }

  void draw () {
    //void draw tekent de character



    // De Charachter
    fill (clr);
    ellipse (x, y, radius, radius);
  }
}
